.modal-outer-container {
  position fixed;
  top 0;
  left 0;
  width 100%;
  height 100%;
  display flex;
  z-index 100;

  .modal-overload {
    position absolute;
    width 100%;
    height 100%;
    background-color rgba(120, 120, 120, 0.8);
  }

  .modal-container {
    margin auto;
    width 600px;
    height 300px;
    z-index 101;
    background-color #fff;

    .modal-body {
      height 100%;
      width 100%;
    }
  }
}